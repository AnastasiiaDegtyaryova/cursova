<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Test Suite">

    <!-- Тест для локального середовища в Chrome -->
    <test name="Local Environment - Chrome">
        <parameter name="environment" value="local" />
        <parameter name="browser" value="chrome" />
        <parameter name="headless" value="false" /> <!-- Додано параметр headless -->
        <classes>
            <class name="ui.tests.LoginTest"/>
            <class name="ui.tests.LoginTestSelenide"/>
            <class name="ui.tests.ProjectCreationTest"/>
            <class name="ui.tests.TaskActionsTest"/>
        </classes>
    </test>

    <!-- Тест для локального середовища в Chrome Headless -->
    <test name="Local Environment - Chrome Headless">
        <parameter name="environment" value="local" />
        <parameter name="browser" value="chrome" />
        <parameter name="headless" value="true" /> <!-- Вибраний headless режим -->
        <classes>
            <class name="ui.tests.LoginTest"/>
            <class name="ui.tests.LoginTestSelenide"/>
            <class name="ui.tests.ProjectCreationTest"/>
            <class name="ui.tests.TaskActionsTest"/>
        </classes>
    </test>

    <!-- Тест для інтернет середовища у Firefox -->
    <test name="Internet Environment - Firefox">
        <parameter name="environment" value="internet" />
        <parameter name="browser" value="firefox" />
        <parameter name="headless" value="false" /> <!-- Headless не обов'язковий для Firefox -->
        <classes>
            <class name="ui.tests.LoginTest"/>
            <class name="ui.tests.LoginTestSelenide"/>
            <class name="ui.tests.ProjectCreationTest"/>
            <class name="ui.tests.TaskActionsTest"/>
        </classes>
    </test>

</suite>
